<h1 class="text-center font-weight-normal"><%= t('.header') %></h1>

<div>
  <%= link_to t('.new_test'), new_admin_test_path  %>
  <%= link_to 'Gists', admin_gists_path, class: 'btn btn-primary' %>
  <%= link_to t('.badges'), admin_badges_path, class: 'btn btn-primary' %>
</div>
<%= render 'shared/errors', resource: @test %>
  <div class="table-responsive">
    <table class="table mt-3">

    <tr class="table-primary">
      <th class="sort-by-title pointer">
      <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.questions') %></th>
      <th colspan="3" class="text-center" ><%= t('.actions') %></th>
    </tr>

  <%= render @tests %>

  <% unless @tests.present? %>
    <th colspan="8"><%= t('.no_tests') %></th>
  <% end %>

  </table>
</div>
